{
  "extends": "eslint:recommended",
  "rules": {
    "no-console": [
      "error",
      {
        "allow": [
          "error"
        ]
      }
    ],
    "eqeqeq": "error",
    "valid-jsdoc": [
      "error",
      {
        "requireParamDescription": false,
        "requireReturnDescription": false,
        "requireReturn": false
      }
    ],
    "curly": [
      "error",
      "multi-line"
    ],
    "no-multi-spaces": "error",
    "no-magic-numbers": [
      "error",
      {
        "ignore": [
          0,
          1,
          86400000
        ]
      }
    ],
    "no-var": "error"
  },
  "env": {
    "browser": true,
    "es6": true
  },
  "plugins": [
    "html"
  ],
  "globals": {
    "Polymer": false,
    "BookStatus": false,
    "userTestBooks": false,
    "libraryTestBooks": false,
    "expectedSoonLibraryBooks": false,
    "suite": false,
    "setup": false,
    "sinon": false,
    "test": false,
    "TEST_BOOKS": false,
    "assert": false,
    "ExlibrisApplication": false,
    "fixture": false,
    "flush": false,
    "teardown": false,
    "reducer": false
  }
}
